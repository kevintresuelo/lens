<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pro_version_title"
        style="@style/TextAppearance.Lens.Subtitle1"
        android:layout_marginStart="@dimen/global_margin_full"
        android:layout_marginEnd="@dimen/global_margin_full"
        android:layout_marginTop="@dimen/global_margin_full" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pro_version_description"
        style="@style/TextAppearance.Lens.Body2"
        android:layout_marginStart="@dimen/global_margin_full"
        android:layout_marginEnd="@dimen/global_margin_full"
        android:layout_marginTop="@dimen/global_margin_full" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fdd_rv_donate_options_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_marginTop="@dimen/global_margin_half"
        android:paddingTop="@dimen/global_spacing_half"
        android:paddingBottom="@dimen/global_spacing_half"
        tools:context=".billing.payments.DonateDialogFragment"
        tools:listitem="@layout/list_item_donate_options" />

</LinearLayout>